datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Role {
  createdAt    DateTime      @default(now())
  id           String        @id @default(cuid())
  name         String?
  permissions  Permission[]
  updatedAt    DateTime      @updatedAt
  userProjects UserProject[]
}

model Project {
  createdAt    DateTime      @default(now())
  description  String?
  id           String        @id @default(cuid())
  name         String?
  owner        String?
  updatedAt    DateTime      @updatedAt
  userProjects UserProject[]
}

model Permission {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  role        Role?    @relation(fields: [roleId], references: [id])
  roleId      String?
  updatedAt   DateTime @updatedAt
}

model UserProject {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  project   Project? @relation(fields: [projectId], references: [id])
  projectId String?
  role      Role?    @relation(fields: [roleId], references: [id])
  roleId    String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  createdAt    DateTime      @default(now())
  email        String?       @unique
  firstName    String?
  id           String        @id @default(cuid())
  lastName     String?
  password     String
  roles        Json
  updatedAt    DateTime      @updatedAt
  username     String        @unique
  userProjects UserProject[]
}
